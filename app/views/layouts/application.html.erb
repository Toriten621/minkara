<!DOCTYPE html>
<html>
  <head>
    <title>Minkara</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <style>
      body {
        background: #fff;
        color: #000;
        font-family: "MS PGothic", "Osaka", sans-serif;
      }

      .thread {
        border-top: 1px solid #ccc;
        padding: 10px 0;
      }

      .thread .meta {
        font-size: 0.8rem;
        color: #555;
        margin-bottom: 5px;
      }

      .thread .content {
        white-space: pre-wrap; 
        font-family: "Courier New", monospace; 
      }

      header .navbar {
        border-bottom: 2px solid #000;
      }
    </style>
  </head>

  <body>
    
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand fw-bold" href="/">Minkara</a>
          <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item"><%= link_to "About", about_path, class: "nav-link" %></li>
              <li class="nav-item"><%= link_to "投稿一覧", posts_path, class: "nav-link" %></li>
              <li class="nav-item"><%= link_to "新規投稿", new_post_path, class: "nav-link" %></li>
              <% if user_signed_in? %>
                <li class="nav-item"><%= link_to "マイページ", user_path(current_user), class: "nav-link" %></li>
                <li class="nav-item"><%= link_to "グループ一覧", groups_path, class: "nav-link" %></li>
                <li class="nav-item"><%= link_to "グループ作成", new_group_path, class: "nav-link" %></li>
                <li class="nav-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %></li>
              <% else %>
                <li class="nav-item"><%= link_to "ログイン", new_user_session_path, class: "nav-link" %></li>
              <% end %>
            </ul>

           
            <%= form_with url: posts_path, method: :get, local: true, class: "d-flex" do |f| %>
              <%= f.text_field :keyword, placeholder: "検索", class: "form-control me-2" %>
              <%= f.submit "検索", class: "btn btn-outline-success" %>
            <% end %>
          </div>
        </div>
      </nav>
    </header>

    
    <main class="container mt-4">
      <p class="notice text-success"><%= notice %></p>
      <p class="alert text-danger"><%= alert %></p>
      <%= yield %>
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
