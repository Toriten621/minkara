<h1><%= @post.title %></h1>
<p><%= @post.content %></p>
<p>作成者: <%= @post.user.email %></p>

<% if user_signed_in? && @post.user == current_user %>
  <%= link_to '編集', edit_post_path(@post) %>
  <%= link_to '削除', post_path(@post), method: :delete, data: { confirm: '本当に削除しますか？' } %>
<% end %>

<%= link_to '一覧へ戻る', posts_path %>
